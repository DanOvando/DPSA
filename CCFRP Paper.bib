  author = {Field, John C. and Punt, Andr{\'e} E. and Methot, Richard D. and Thomson, Cynthia J.},
  month = dec,
  year = {2006},
  keywords = {fisheries assessment,Fisheries management,fish stock,marine protected area,spatial model},
  pages = {284--302}
