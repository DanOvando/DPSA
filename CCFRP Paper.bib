  journal = {North American Journal of Fisheries Management},
  author = {Smith, Matthew W. and Then, Amy Y. and Wor, Catarina and Ralph, Gina and Pollock, Kenneth H. and Hoenig, John M.},
  year = {2012},
  pages = {956--967}
}

@article{Carruthers2014,
  title = {Evaluating methods for setting catch limits in data-limited fisheries},
